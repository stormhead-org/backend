# Application name (for metrics, etc.)
NAME=backend

# Kafka configuration
KAFKA_HOST=localhost
KAFKA_PORT=9092
KAFKA_TOPIC=authorization_events
KAFKA_GROUP=authorization_group

# SMTP configuration for email sending
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password

# PostgreSQL database connection
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=stormhead

# URLs for email verification and password reset
VERIFICATION_URL=http://localhost:8080/verify
PASSWORD_RESET_URL=http://localhost:8080/reset-password

# JWT secret for token signing
JWT_SECRET=your_jwt_secret

# gRPC server configuration
GRPC_HOST=localhost
GRPC_PORT=50051

# Gateway server configuration
GATEWAY_HOST=localhost
GATEWAY_PORT=8080

# Debug mode (1 for true, 0 for false)
DEBUG=1